<?xml version="1.0" encoding="UTF-8"?>
<project name="test" default="build" basedir="./">
	<target name="build">
		<apply executable="yogi">
            <fileset dir="./" includes="build.json"/>
            <arg value="build"/>

		</apply>
	</target>
	<target name="test">
		<apply executable="yogi">
			<arg value="test"/>
			<arg value="--istanbul"/>
            <fileset dir="./" includes="build.json"/>
		</apply>
	</target>
</project>